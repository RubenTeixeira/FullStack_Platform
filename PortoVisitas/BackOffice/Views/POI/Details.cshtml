        <dd>
            @Html.DisplayFor(model => model.Approved)
        </dd>

    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ConnectedPOIs)
        </dt>

        <dd>
        </dd>
        @{
            foreach (ClassLibrary.Models.POI connected in Model.ConnectedPOIs)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayName(connected.Name)
                </dd>
            }
        }
    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Hashtags)
        </dt>

        <dd>
        </dd>
        @{
            foreach (ClassLibrary.Models.Hashtag hash in Model.Hashtags)
            {
                <dt>
                    @Html.DisplayName(ClassLibrary.Resources.Hashtag.Text)
                </dt>

                <dd>
                    @Html.DisplayName(hash.Text)
                </dd>
            }
        }
    </dl>
</div>
<p>
    @Html.ActionLink(ClassLibrary.Resources.Global.Edit, "Edit", new { id = Model.POIID }) |
    @Html.ActionLink(ClassLibrary.Resources.Global.ReturnToList, "Index")
</p>
