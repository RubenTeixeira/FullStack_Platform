        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OpenHour)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OpenHour)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CloseHour)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CloseHour)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VisitDuration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VisitDuration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GPS_Lat)
        </dt>

        <dd>
