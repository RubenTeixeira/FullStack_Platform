@{
    ViewBag.Title = ClassLibrary.Resources.Global.Delete;
}

<h2>@ClassLibrary.Resources.Global.Delete</h2>

<h3>@ClassLibrary.Resources.Global.DeleteConfirm</h3>
<div>
    <h4>@ClassLibrary.Resources.Global.Percurso</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
