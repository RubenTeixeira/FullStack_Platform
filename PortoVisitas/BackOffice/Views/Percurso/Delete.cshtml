        <dt>
            @Html.Raw(@ClassLibrary.Resources.Global.Percurso)
        </dt>

        <dd>
            @Html.Raw(Html.Encode(ViewBag.route).Replace("\n", "<br />"))
        </dd>
    </dl>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value=@ClassLibrary.Resources.Global.Delete class="btn btn-default" /> |
            @Html.ActionLink(ClassLibrary.Resources.Global.ReturnToList, "Index")
        </div>
